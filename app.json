{
  "expo": {
    "name": "YeniYasam",
    "slug": "YeniYasam",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourcompany.yeniyasam",
      "infoPlist": {
        "NSCameraUsageDescription": "Uygulama kamera erişimi gerektiriyor.",
        "NSPhotoLibraryUsageDescription": "Fotoğraf kütüphanesine erişim gerekiyor.",
        "NSLocationWhenInUseUsageDescription": "Konum bilginiz haber içerikleri için kullanılır.",
        "NSAppTransportSecurity": {
          "NSAllowsArbitraryLoads": true
        }
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.anonymous.YeniYasam"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-web-browser",
      "expo-font"
    ]
  }
}
